{% extends 'home-broker/base-dashboard.html.twig' %}

{% block body %}
    <h1>Olá {{ user.getName }}</h1>

    <h2>Saldo: R$ {{ user.balance|number_format(2, ',', '.') }}</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Ação</th>
            <th>Quantidade</th>
            <th>&nbsp;</th>
        </tr>
        </thead>

        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.stock_option.company }}</td>
                <td>{{ stock.quantity }}</td>
                <td><button>Vender</button></td>
            </tr>
        {% endfor %}
        <tr></tr>
        </tbody>
    </table>
{% endblock %}